<h1>FoV Calculator</h1>

<%= form_tag calc_fov_path, :method => :post, :class => :well do %>
  <%= label_tag "resolution", "Resolution" %>
  <%= select_tag "resolution", options_for_select(@resolutions.collect { |r| ["#{r.x} x #{r.y}", r.id] }) %>

  <%= label_tag "monitor_size", "Monitor size in Inch" %>
  <%= select_tag "monitor_size", options_for_select(@monitor_sizes.collect { |m| ["#{m.size}\"", m.id]}) %>

  <%= label_tag "viewing_distance", "Distance Monitor <-> Eyes" %>
  <%= number_field_tag "viewing_distance", 50, :min => 1 %>
  <%= select_tag "viewing_distance_unit", options_for_select([["cm", "cm"], ["Inch", "inch"]]) %>

  <%= submit_tag "Calculate", :class => [:btn, 'btn-primary'] %>
<% end %>